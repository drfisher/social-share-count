{
	"compileOnSave": false,
	"compilerOptions": {
		"declaration": true,
		"diagnostics": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "./dist",
		"pretty": true,
		"removeComments": false,
		"skipLibCheck": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"target": "es2015"
	},
	"files": [
		"./src/index.ts"
	],
	"exclude": [
		"node_modules"
	]
}
